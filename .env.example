# Discord OAuth2 credentials (for server listing)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Discord Bot Token (legacy - replaced by self-bot for scraping)
DISCORD_BOT_TOKEN=your_discord_bot_token

# JWT Secret for authentication
JWT_SECRET_KEY=your-secret-key-here

# Self-bot Configuration
TOKEN_ENCRYPTION_KEY=your-encryption-key-here
ENABLE_SELFBOT_MODE=true
SELFBOT_WARNING_ACCEPTED=false

# Anti-detection Settings
SELFBOT_MIN_DELAY=2
SELFBOT_MAX_DELAY=7
SELFBOT_MESSAGES_PER_HOUR=100
SELFBOT_ACTIVE_HOURS_START=9
SELFBOT_ACTIVE_HOURS_END=23

# Optional: Override default database settings
# DATABASE_URL=postgresql://discord_user:discord_password@localhost:5432/discord_scraper
# REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development